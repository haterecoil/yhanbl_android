<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:elevation="100dp"
    android:nestedScrollingEnabled="false">

    <yhanbl.yhanbl.view.SquareImageView
        android:id="@+id/newsfeed_message_image"
        android:gravity="center"
        tools:text="@string/app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/newsfeed_message_text"
        android:textSize="@dimen/text_body"
        android:textColor="@color/colorTextPrimary"
        android:background="#FFFFFF"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="1"
        android:textIsSelectable="true"
        android:textAlignment="textStart" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/overlay_bad"
        android:layout_height="fill_parent"
        android:background="#EF8B8B"
        android:alpha="0.7"
        android:visibility="invisible"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/overlay_good"
        android:layout_height="fill_parent"
        android:background="#9CC871"
        android:alpha="0.7"
        android:visibility="invisible"></RelativeLayout>

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:alpha="0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="#A5F" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:alpha="0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:background="#5AF" />
</FrameLayout>